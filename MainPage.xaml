<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HeatInputCalculator.MainPage">

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
        <Grid ColumnDefinitions="Auto,Auto,*,Auto" 
              Padding="20,15"
              BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#1A1A1A}">

            <Image Source="hi_logo.png"
                   HeightRequest="45"
                   WidthRequest="45"
                   Aspect="AspectFit"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   Grid.Column="0"
                   Margin="0,0,10,0"/>

            <Label Text="HEAT INPUT" 
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#6A0DAD"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   Grid.Column="1"
                   FontFamily="Bold"/>

            <BoxView Grid.Column="2" Color="Transparent"/>

            <Button x:Name="ThemeToggleBtn"
                    Text="Alterar Tema"
                    Clicked="OnThemeToggleClicked"
                    Grid.Column="3"
                    CornerRadius="20"
                    Padding="20,12"
                    BackgroundColor="#6A0DAD"
                    TextColor="White"
                    FontSize="14"
                    FontAttributes="Bold"
                    MinimumWidthRequest="120"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="30" VerticalOptions="Center">

                <Border 
                    BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#2D2D2D}"
                    Stroke="{AppThemeBinding Light=#D8BFD8, Dark=#4B0082}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 16"
                    Padding="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="800"
                    MaximumWidthRequest="850">

                    <Label Text="O Heat Input, ou energia de soldagem, é a quantidade de energia térmica fornecida ao material durante o processo de soldagem, calculada a partir da corrente elétrica, tensão, eficiência do processo e velocidade de soldagem. Entender o heat input é fundamental, pois influencia diretamente a microestrutura do material, a resistência mecânica da junta e a presença de deformações ou fissuras. Um controle adequado evita defeitos, reduz retrabalho e garante a qualidade do produto final."
                           FontSize="16"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>
                </Border>

                <Button x:Name="StartButton"
                    Text="Iniciar Cálculo do Heat Input"
                    Clicked="OnStartCalculationClicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    CornerRadius="25"
                    Padding="40,18"
                    BackgroundColor="#6A0DAD"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    WidthRequest="350"/>

            </VerticalStackLayout>
        </ScrollView>

        <Border Grid.Row="2"
                BackgroundColor="{AppThemeBinding Light=#E6E6FA, Dark=#2D2D2D}"
                Stroke="Transparent"
                Padding="20,15">
            <Grid>
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Desenvolvido por Matheus de Andrade"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                           HorizontalOptions="Center" />

                    <HorizontalStackLayout Spacing="25" HorizontalOptions="Center">
                        <ImageButton Source="linkedin.png"
                                     Clicked="OnLinkedInClicked"
                                     WidthRequest="30"
                                     HeightRequest="30"
                                     BackgroundColor="Transparent"/>
                        <ImageButton Source="gmail.png"
                                     Clicked="OnGmailClicked"
                                     WidthRequest="30"
                                     HeightRequest="30"
                                     BackgroundColor="Transparent"/>
                        <ImageButton Source="site.png"
                                     Clicked="OnSiteClicked"
                                     WidthRequest="30"
                                     HeightRequest="30"
                                     BackgroundColor="Transparent"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </Border>

    </Grid>
</ContentPage>