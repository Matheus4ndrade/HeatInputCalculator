<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HeatInputCalculator.CalculationPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Heat Input"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#333333, Dark=White}" />

            <Frame CornerRadius="10"
                   Padding="10"
                   BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#333333}">
                <Entry x:Name="entryAmperagem"
                       Placeholder="Amperagem (I)"
                       Keyboard="Numeric"
                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
            </Frame>

            <Frame CornerRadius="10"
                   Padding="10"
                   BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#333333}">
                <Entry x:Name="entryTensao"
                       Placeholder="Tensão (V)"
                       Keyboard="Numeric"
                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
            </Frame>

            <Frame CornerRadius="10"
                   Padding="10"
                   BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#333333}">
                <Entry x:Name="entryEficiencia"
                       Placeholder="Eficiência (η) %"
                       Keyboard="Numeric"
                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
            </Frame>

            <!-- Seleção para uniddade -->
            <Grid ColumnDefinitions="2*,Auto" ColumnSpacing="10">
                <Frame Grid.Column="0"
                       CornerRadius="10"
                       Padding="10"
                       BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#333333}">
                    <Entry x:Name="entryVelocidade"
                           Placeholder="Velocidade de soldagem"
                           Keyboard="Numeric"
                           TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                </Frame>

                <Picker x:Name="pickerUnidade"  
                        Grid.Column="1"
                        WidthRequest="120"
                        HorizontalOptions="End"
                        BackgroundColor="{AppThemeBinding Light=#e0e0e0, Dark=#444444}"
                        TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                        SelectedIndex="1">
                    <Picker.Items>
                        <x:String>cm/s</x:String>
                        <x:String>cm/min</x:String>
                        <x:String>mm/min</x:String>
                        <x:String>mm/s</x:String>
                    </Picker.Items>
                </Picker>
            </Grid>

            <Button Text="Calcular"
                    WidthRequest="150"
                    HorizontalOptions="Center"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Padding="12"
                    Clicked="OnCalcularClicked"/>

            <Frame CornerRadius="15"
                   Padding="20"
                   BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#222222}"
                   HasShadow="True">
                <Label x:Name="lblResultado"
                       Text=""
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
            </Frame>

            <Label Text="Desenvolvido por Matheus de Andrade"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light=#555555, Dark={StaticResource SecondaryTextDark}}"
                   HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="30"
                                   HorizontalOptions="Center">
                <ImageButton Source="linkedin.png"
                             Clicked="OnLinkedInClicked"
                             WidthRequest="32"
                             HeightRequest="32"
                             BackgroundColor="Transparent"/>
                <ImageButton Source="gmail.png"
                             Clicked="OnGmailClicked"
                             WidthRequest="32"
                             HeightRequest="32"
                             BackgroundColor="Transparent"/>
                <ImageButton Source="site.png"
                             Clicked="OnSiteClicked"
                             WidthRequest="32"
                             HeightRequest="32"
                             BackgroundColor="Transparent"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
